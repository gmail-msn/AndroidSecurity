	<LinearLayout android:layout_width="fill_parent"
		android:paddingLeft="13dip"
		android:gravity="center_vertical" android:paddingBottom="5dp" android:paddingTop="5dip" android:layout_height="wrap_content">
		<TextView android:layout_marginLeft="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center_vertical" android:textColor="#313031"
			android:text="@string/virus_scan_report_text" android:id="@+id/virus_scan_4_des_title_tv" android:layout_weight="1"/>
		<LinearLayout android:layout_marginRight="5dp"
	android:gravity="center"
	android:id="@+id/uninstall_action_linear" android:layout_width="wrap_content"
	android:padding="3dp" android:background="@drawable/button_bg_selector" android:layout_height="wrap_content">
			<ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/icon_shanchu" android:layout_width="wrap_content" android:layout_marginRight="3dp"></ImageView>
			<TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="wrap_content" android:textColor="@color/white" android:text="@string/softmanage_uninstall_text" android:layout_gravity="center_vertical"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:background="@color/white">
		<LinearLayout android:orientation="vertical"
			android:layout_height="wrap_content" android:layout_width="match_parent"
			android:gravity="center_vertical" android:padding="5dp">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:gravity="left">
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/virus_scan_icon04"></ImageView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/virus_scan_find_virus_text"
					android:layout_marginRight="2dp"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginRight="25dp" android:id="@+id/viruses_found_text_1"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/virus_scan_clean_success_text"
					android:layout_marginRight="2dp"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginRight="25dp" android:id="@+id/clean_success_text_1"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:layout_marginTop="10dp">
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/icon08"></ImageView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/virus_scan_care_use_text"
					android:layout_marginRight="2dp"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginRight="25dp" android:id="@+id/care_to_use_text_1"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginRight="2dp"
					android:text="@string/virus_scan_need_treat_text"></TextView>
				<TextView android:textColor="#313031" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/need_to_treat_text_1"></TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:gravity="center_vertical">
		<LinearLayout android:layout_height="match_parent"
			android:layout_width="wrap_content" android:layout_weight="1" android:padding="5dp" android:orientation="vertical" android:gravity="left|center_vertical">
			<TextView android:layout_width="wrap_content" android:text="@string/virus_scan_select_uninstall_apps_text" android:layout_height="wrap_content" android:textColor="@color/black" android:gravity="center_vertical"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_height="match_parent"
			android:layout_width="wrap_content" android:layout_gravity="right" android:layout_weight="1" android:gravity="right">
			<TextView android:layout_width="wrap_content" android:text="@string/all_select" android:layout_height="wrap_content" android:textColor="@color/black"></TextView>
			<CheckBox android:id="@+id/select_al_cb"
				android:layout_width="40dip" android:layout_marginLeft="10dip"
				android:layout_height="40dip" android:focusable="false"
				android:padding="5dip"
				android:textColor="@color/black" android:text="      "
				android:background="@null" android:button="@drawable/checkbox_button" />
		</LinearLayout>
	</LinearLayout>
	<ListView android:layout_width="fill_parent" android:isScrollContainer="true"
		android:layout_height="0dip" android:cacheColorHint="#00000000"
		android:divider="@null"
		android:id="@+id/virus_scan_need_treat_list" android:layout_weight="1"/>
</LinearLayout>
