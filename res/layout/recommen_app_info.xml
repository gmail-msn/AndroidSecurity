<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical"
  android:background="@drawable/theme_bg" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent"
		android:background="#6CBD45" android:layout_height="40dip">
		<TextView android:gravity="center" android:textColor="@color/white"
			android:textSize="18dip" android:text="@string/softmanage_recommend_tab"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</LinearLayout>
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/relativeLayout1">
	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/softmanage_app_info_layout" android:layout_marginRight="5dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
	        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:focusable="false" android:id="@+id/softmanage_icon_layout" android:layout_gravity="center_vertical">
	            <ImageView android:id="@+id/softmanage_app_icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="5dp" android:padding="6dp"></ImageView>
	        </LinearLayout>
	        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:focusable="false" android:id="@+id/softmanage_info_layout" android:layout_gravity="center_vertical">
	            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/softmanage_label_layout" android:layout_gravity="center_vertical" android:layout_weight="1">
	                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/softmanage_app_label" android:textColor="#000000" android:layout_gravity="center_vertical" android:textSize="18sp"></TextView>
	            </LinearLayout>
	            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/softmanage_descrip_layout" android:layout_gravity="center_vertical" android:layout_weight="1">
	                <TextView android:id="@+id/softmanage_app_version" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="5dp" android:layout_gravity="center_vertical" android:textColor="#000000" android:textSize="15sp"></TextView>
	                <TextView android:id="@+id/softmanage_app_size" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:textColor="#000000" android:textSize="15sp"></TextView>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:orientation="vertical">
	        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/install_linear">
		        <ImageView android:layout_width="wrap_content"
						android:layout_marginTop="2dip" android:layout_height="wrap_content"
						android:src="@drawable/icon_anzhuang" />
					<TextView android:layout_width="wrap_content"
						android:layout_marginLeft="3dip" android:textColor="@color/white"
						android:layout_height="wrap_content" android:text="@string/softmanage_install_now_text" />
	        </LinearLayout>
	        
	        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/uninstall_linear">
		        <ImageView android:layout_width="wrap_content"
						android:layout_marginTop="2dip" android:layout_height="wrap_content"
						android:src="@drawable/icon_shanchu" />
					<TextView android:layout_width="wrap_content"
						android:layout_marginLeft="3dip" android:textColor="@color/white"
						android:layout_height="wrap_content" android:text="@string/softmanage_uninstall_text" />
	        </LinearLayout>
	        
	    </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearLayout5" android:layout_height="wrap_content" android:layout_width="match_parent">
            <TextView android:layout_gravity="center_vertical" android:layout_marginLeft="15dp" android:layout_height="wrap_content" android:text="@string/softmanage_install_descript_text" android:id="@+id/textView1" android:layout_width="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout6" android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="TextView" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/soft_description_text"></TextView>
        </LinearLayout>
    </LinearLayout>
    <ListView 
	  	android:id="@id/android:list" 
	  	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:drawSelectorOnTop="false"
		android:scrollbars="vertical" />
	
</LinearLayout>
