<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:duplicateParentState="false"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/linear_focuse">

	<LinearLayout android:layout_width="fill_parent"
		android:background="#6CBD45" android:layout_height="40dip">
		<RelativeLayout android:layout_height="match_parent"
			android:layout_width="wrap_content">
			<TextView android:gravity="center" android:textColor="@color/white"
				android:textSize="18dip" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_centerInParent="true" android:text="@string/intercept_nodisturb_setting_title"/>
		</RelativeLayout>

	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:orientation="vertical"
		android:padding="5dp">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="match_parent" android:padding="5dp"
			android:background="@drawable/listselect" android:id="@+id/enable_nodisturb_mode_linear">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:layout_marginLeft="10dp"
				android:gravity="center_vertical">
				<TextView android:textColor="@color/black"
					android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/enable_nodisturb_mode" android:id="@+id/enable_nodist_mode_text"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" android:gravity="center_vertical">
				<CheckBox android:background="@null" android:button="@drawable/checkbox_button"
						android:focusable="false"
						android:focusableInTouchMode="false" android:clickable="false" android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/enable_nodist_mode_cb"></CheckBox>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="match_parent" android:padding="5dp"
			android:background="@drawable/listselect" android:id="@+id/set_start_time_linear">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:layout_marginLeft="10dp"
				android:gravity="center_vertical">
				<TextView android:textColor="@color/black"
					android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/nodisturb_start_time"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" android:layout_marginRight="5dp"
				android:gravity="center_vertical">
				<TextView android:layout_height="wrap_content" android:id="@+id/start_time"
					android:layout_width="wrap_content" android:textSize="15sp" android:textColor="@color/light_green"></TextView>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="match_parent" android:padding="5dp"
			android:background="@drawable/listselect" android:id="@+id/set_end_time_linear">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:layout_marginLeft="10dp"
				android:gravity="center_vertical">
				<TextView android:textColor="@color/black"
					android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/nodisturb_end_time"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" android:layout_marginRight="5dp"
				android:gravity="center_vertical">
				<TextView android:layout_marginLeft="6dp"
					android:layout_height="wrap_content"
					android:id="@+id/end_time" android:layout_width="wrap_content" android:textSize="15sp" android:textColor="@color/light_green"></TextView>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="match_parent" android:padding="5dp"
			android:background="@drawable/listselect" android:id="@+id/set_day_linear">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:layout_marginLeft="10dp"
				android:gravity="center_vertical" android:layout_toLeftOf="@+id/day_setting_linear">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@color/black"
					android:textSize="20sp" android:text="@string/intercept_time_setting_day" android:singleLine="true"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" android:layout_marginRight="5dp"
				android:gravity="center_vertical" android:id="@+id/day_setting_linear" android:layout_width="wrap_content">
				<TextView android:layout_height="wrap_content"
					android:id="@+id/day_time" android:textSize="15sp" android:textColor="@color/light_green" android:layout_width="wrap_content"></TextView>
				<ImageView
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:src="@drawable/arrow03" android:layout_marginLeft="6dp"></ImageView>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="match_parent" android:padding="5dp"
			android:background="@drawable/listselect" android:id="@+id/select_mode_linear">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:layout_marginLeft="10dp"
				android:gravity="center_vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@color/black"
					android:textSize="20sp" android:text="@string/select_intercept_model"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true" android:layout_marginRight="5dp"
				android:gravity="center_vertical">
				<TextView android:layout_marginLeft="6dp"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/current_mode" android:textSize="15sp" android:textColor="@color/light_green"></TextView>
				<ImageView
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:src="@drawable/arrow03" android:layout_marginLeft="6dp"></ImageView>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>