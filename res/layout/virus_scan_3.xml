	<LinearLayout android:layout_width="fill_parent"
		android:paddingTop="4dip" android:paddingLeft="13dip"
		android:layout_height="30dp">
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/firewall_icon" />
		<TextView android:text="@string/safe_your_mobile"
			android:layout_marginLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_vertical"
			android:textColor="#313031" android:id="@+id/virus_scan_3_des_title_tv" />
	</LinearLayout>
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="1" android:background="@color/white">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:background="@drawable/white_bg01"
			android:orientation="vertical" android:id="@+id/virus_scan_3_layout">

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:gravity="center_horizontal" android:layout_marginTop="15dp">
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:src="@drawable/virus_scan_icon06"
					android:layout_weight="1"></ImageView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:layout_marginTop="15dp" android:text="0%" android:textSize="20sp"
					android:id="@+id/virus_scan_3_progress_text" android:textColor="@color/green"></TextView>
			</LinearLayout>
			<View android:layout_width="match_parent" android:background="@drawable/virus_scan_line01" android:layout_height="1dp"></View>
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:gravity="center_vertical" android:padding="10dp" android:layout_marginTop="10dp">
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="match_parent" android:gravity="left">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_marginRight="5dp"
						android:src="@drawable/virus_scan_icon04"></ImageView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/virus_scan_find_virus_text"
						android:layout_marginRight="2dp"></TextView>
					<TextView android:textColor="#313031" android:text="2"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginRight="25dp" android:id="@+id/viruses_found_text"></TextView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/virus_scan_clean_success_text"
						android:layout_marginRight="2dp"></TextView>
					<TextView android:textColor="#313031" android:text="2"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginRight="25dp" android:id="@+id/clean_success_text"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="match_parent" android:layout_marginTop="20dp">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_marginRight="5dp"
						android:src="@drawable/icon08"></ImageView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/virus_scan_care_use_text"
						android:layout_marginRight="2dp"></TextView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="2" android:layout_marginRight="25dp"
						android:id="@+id/care_to_use_text"></TextView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginRight="2dp" android:text="@string/virus_scan_need_treat_text"></TextView>
					<TextView android:textColor="#313031"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="2" android:id="@+id/need_to_treat_text"></TextView>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:gravity="center">
				<TextView android:layout_height="wrap_content"
					android:id="@+id/virus_scan_result_text" android:textColor="@color/black"
					android:text="@string/virus_scan_fail_prompt_text" android:gravity="right"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_height="wrap_content" android:id="@+id/virus_report_text"
					android:layout_width="wrap_content" android:textColor="@color/green"
					android:textSize="16sp" android:layout_marginLeft="3dp"
					android:text="@string/virus_scan_report_text" android:visibility="gone"></TextView>
				<TextView android:layout_height="wrap_content" android:id="@+id/virus_report_end"
					android:layout_width="wrap_content" android:text="TextView"
					android:textColor="@color/black" android:layout_marginLeft="3dp"
					android:visibility="gone"></TextView>
			</LinearLayout>
			<View android:background="@drawable/virus_scan_line01"
				android:layout_width="match_parent"
				android:layout_marginTop="10dp" android:layout_height="1dp"></View>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:orientation="horizontal"
				android:gravity="center_horizontal" android:layout_marginTop="10dp">
				<LinearLayout android:orientation="horizontal"
					android:padding="5dp" android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp" android:id="@+id/virus_scan_again_linear"
					android:background="@drawable/button_bg_selector" android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:src="@drawable/virus_scan_icon03"></ImageView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="@string/virus_scan_again_text"
						android:textColor="@color/white" android:layout_marginLeft="5dp"></TextView>
				</LinearLayout>
				<LinearLayout android:orientation="horizontal"
					android:padding="5dp" android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp" android:id="@+id/virus_scan_report_linear"
					android:background="@drawable/button_bg_selector" android:layout_marginLeft="30dp" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:src="@drawable/virus_scan_icon05"></ImageView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="@string/virus_scan_report_text"
						android:textColor="@color/white" android:layout_marginLeft="5dp"></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
