<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:duplicateParentState="false"
	android:background="#EEEEEE">

	<LinearLayout android:layout_width="fill_parent"
		android:background="#6CBD45" android:layout_height="40dip">
		<RelativeLayout android:layout_height="match_parent"
			android:layout_width="wrap_content">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:id="@+id/home_page"
				 android:layout_marginLeft="10dp"
				android:gravity="center" android:layout_centerVertical="true">
				<TextView  android:id="@+id/textView1"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" android:textSize="12sp"></TextView>

				<ImageView android:src="@drawable/home_icon"
					android:layout_height="wrap_content" android:id="@+id/home_icon"
					android:layout_width="wrap_content"></ImageView>

			</LinearLayout>
			<TextView android:gravity="center" android:textColor="@color/white"
				android:textSize="18dip" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:text="@string/backup_app_list_text"
				android:layout_centerInParent="true" />
		</RelativeLayout>

	</LinearLayout>
	<ScrollView android:layout_width="match_parent"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:background="@color/white">
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="wrap_content">
			<LinearLayout android:layout_width="match_parent"
				android:gravity="center_horizontal" android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout android:id="@+id/linearLayout3"
					android:layout_width="wrap_content" android:gravity="center_horizontal"
					android:layout_height="match_parent" android:padding="5dp">
					<TextView android:textSize="20sp" android:id="@+id/textView1"
						android:textColor="@color/black" android:text="@string/backup_applist_text"
						android:layout_width="wrap_content" android:gravity="center_horizontal"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="match_parent"
					android:gravity="center" android:layout_height="wrap_content"
					android:padding="5dp">
					<TextView android:layout_marginRight="5dp" android:id="@+id/textView2"
						android:text="@string/backup_applist_apps_sum_text"
						android:textColor="#646464" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
					<TextView android:textSize="16sp" android:textColor="@color/light_green"
						android:text="(30)" android:id="@+id/backup_applist_exists_sum_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/backup_applist_action_linear"
					android:gravity="center" android:padding="5dp"
					android:background="@drawable/button_bg_selector" android:layout_height="wrap_content" android:layout_width="100dp">
					<ImageView android:id="@+id/imageView1"
						android:src="@drawable/icon_beifen01"
						android:layout_marginRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
					<TextView android:textColor="@color/white" android:id="@+id/textView3"
						android:text="@string/backup_button_backup_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp"></TextView>
				</LinearLayout>
			</LinearLayout>

			<View android:layout_width="match_parent" android:background="@drawable/virus_scan_line01"
				android:layout_height="1dp" android:layout_marginTop="5dp"></View>
			<LinearLayout android:layout_width="match_parent"
				android:gravity="center_horizontal" android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout android:layout_width="wrap_content"
					android:gravity="center_horizontal" android:layout_height="match_parent" android:padding="5dp">
					<TextView android:textSize="20sp" android:id="@+id/textView4"
						android:textColor="@color/black" android:text="@string/backup_applist_browlist_text"
						android:layout_width="wrap_content" android:gravity="center_horizontal"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="match_parent"
					android:gravity="center" android:layout_height="wrap_content" android:padding="3dp">
					<TextView android:layout_marginRight="5dp"
						android:text="@string/backup_applist_backed_sum_text"
						android:textColor="#646464" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
					<TextView android:textSize="16sp" android:textColor="@color/light_green"
						android:text="(30)" android:id="@+id/backup_applist_backed_sum_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="match_parent"
					android:gravity="center_horizontal" android:padding="5dp"
					android:layout_height="wrap_content">
					<TextView android:text="@string/backup_last_scan_time"
						android:id="@+id/backup_applist_last_time_tip_text"
						android:textColor="#646464" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
					<TextView android:id="@+id/backup_applist_last_time_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/backup_browlist_action_linear"
					android:gravity="center" android:layout_marginBottom="3dp"
					android:padding="5dp" android:layout_marginTop="3dp"
					android:background="@drawable/button_bg_selector" android:layout_height="wrap_content" android:layout_width="100dp">
					<ImageView android:layout_marginRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_liebiao"></ImageView>
					<TextView android:textColor="@color/white" android:id="@+id/textView6"
						android:text="@string/backup_applist_browlist_action_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp"></TextView>
				</LinearLayout>
			</LinearLayout>
			<View android:layout_width="match_parent" android:background="@drawable/virus_scan_line01"
				android:layout_marginTop="5dp" android:layout_height="1dp"></View>
			<LinearLayout android:layout_width="match_parent"
				android:padding="5dp" android:layout_height="wrap_content"
				android:orientation="vertical" android:gravity="center">
				<TextView android:text="@string/backup_applist_delback_text"
					android:layout_width="wrap_content" android:textColor="#646464"
					android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"></TextView>
				<LinearLayout android:id="@+id/backup_delback_action_linear"
					android:gravity="center" android:padding="5dp"
					android:layout_marginTop="3dp" android:background="@drawable/button_bg_selector" android:layout_height="wrap_content" android:layout_width="100dp">
					<ImageView android:layout_marginRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_shanchu"></ImageView>
					<TextView android:textColor="@color/white"
						android:text="@string/backup_applist_delback_action_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp"></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
