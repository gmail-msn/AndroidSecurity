<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#EEEEEE">




	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fillViewport="true"
		android:paddingLeft="5dip" android:paddingRight="5dip">

		<LinearLayout android:layout_width="fill_parent"
			android:background="@color/white" android:layout_height="fill_parent"
			android:orientation="vertical">

			<TextView android:layout_marginTop="15dip"
				 android:textColor="@color/light_black"
				android:paddingLeft="5dip" android:text="@string/mobile_setup_helpyou"
				android:textSize="18dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>
			<TextView android:id="@+id/safe_mobile_des_tv"
				android:layout_marginTop="20dip" android:paddingRight="5dip"
				android:paddingLeft="5dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>

			<TextView android:id="@+id/lock_mobile_des_tv"
				android:layout_marginTop="20dip" android:paddingRight="5dip"
				android:paddingLeft="5dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content"></TextView>
			<View android:layout_width="fill_parent" android:background="@drawable/virus_scan_line01"
				android:layout_height="1dp" android:layout_marginTop="18dip"></View>
			<LinearLayout android:layout_width="fill_parent"
				android:paddingTop="15dip" android:layout_height="wrap_content"
				android:gravity="center_horizontal">

				<Button android:text="@string/exit_setup" android:id="@+id/sms_content_bt"
					android:singleLine="true" android:paddingTop="5dip"
					android:paddingBottom="5dip" android:textColor="@color/white"
					android:layout_marginTop="8dip" android:background="@drawable/button_bg_selector"
					android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
					android:layout_width="100dip"></Button>
				<Button android:text="@string/begin_setup" android:id="@+id/nextstep_to_step_three_bt"
					android:singleLine="true" android:paddingTop="5dip"
					android:layout_marginLeft="20dip" android:paddingBottom="5dip"
					android:textColor="@color/white" android:layout_marginTop="8dip"
					android:background="@drawable/button_bg_selector"
					android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
					android:layout_width="100dip"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
