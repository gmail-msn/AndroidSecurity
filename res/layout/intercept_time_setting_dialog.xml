<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_horizontal|center"
	android:gravity="center_horizontal" android:layout_height="wrap_content" android:paddingTop="0dip" android:layout_width="300dp">

	<LinearLayout android:layout_width="300dip"
		android:background="@color/white" android:layout_height="wrap_content"
		android:orientation="vertical" android:paddingBottom="5dip">


		<LinearLayout android:background="#6CBD45"
			android:gravity="center" android:layout_height="45dp"
			android:layout_width="fill_parent">
			<ImageView android:id="@+id/imageView1"
				android:layout_marginRight="5dp" android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" android:src="@drawable/soft_prompt_dialog_icon"
				android:layout_height="wrap_content" android:layout_marginTop="2dp"></ImageView>
			<TextView android:id="@+id/title_text_tv" android:textColor="@color/white"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/intercept_time_setting_dialog_title"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:padding="10dp" android:gravity="center" android:orientation="horizontal" android:layout_marginTop="5dp">
			<TextView android:textColor="@color/black" android:layout_height="wrap_content" android:text="@string/intercept_time_setting_from" android:layout_width="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true" android:id="@+id/start_time_et" android:layout_width="60dp" android:inputType="none" android:editable="false"></EditText>
			<TextView android:layout_marginLeft="5dp" android:textColor="@color/black" android:layout_height="wrap_content" android:text="@string/intercept_time_setting_to" android:layout_width="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:id="@+id/end_time_et" android:singleLine="true" android:layout_width="60dp" android:inputType="none" android:editable="false"></EditText>
		</LinearLayout>


		<LinearLayout android:orientation="vertical"
			android:gravity="center_horizontal" android:layout_weight="1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="6dp">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="8dip" android:gravity="center_horizontal"
				android:layout_gravity="center_horizontal" android:layout_width="match_parent">
				<Button android:text="@android:string/ok" android:id="@+id/button_ok"
					android:padding="5dp" android:textColor="@color/white"
					android:layout_marginBottom="2dp" android:background="@drawable/button_bg_selector"
					android:layout_height="wrap_content" android:layout_width="100dip"></Button>
				<Button android:text="@android:string/cancel" android:id="@+id/button_cancel"
					android:padding="5dp" android:layout_marginLeft="10dp"
					android:textColor="@color/white" android:layout_marginBottom="2dp"
					android:background="@drawable/button_bg_selector"
					android:layout_width="100dip" android:layout_height="wrap_content"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
