<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">


	<ImageView android:src="@drawable/virus_scan_icon06"
		android:layout_margin="5dp" android:layout_width="50dip"
		android:layout_height="50dip" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center_vertical">

		<TextView android:id="@+id/progressDescription"
			android:textStyle="bold" android:textColor="@color/black"
			android:textSize="16sp" android:paddingTop="6dip"
			android:paddingLeft="3dip" android:layout_width="wrap_content"
			android:layout_height="40dip" />
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<RelativeLayout android:id="@+id/notification_rl"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginTop="1dp">
				<LinearLayout android:id="@+id/green_linear"
					android:layout_width="fill_parent" android:layout_height="wrap_content">

					<ProgressBar android:id="@+id/notificationProgress_green"
						android:layout_centerVertical="true" android:progressDrawable="@drawable/progress_bar_2"
						style="?android:attr/progressBarStyleHorizontal"
						android:layout_width="fill_parent" android:layout_height="11dip"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp" />
				</LinearLayout>
				<LinearLayout android:id="@+id/yellow_linear"
					android:layout_width="fill_parent" android:visibility="gone"
					android:layout_height="wrap_content">
					<ProgressBar android:id="@+id/notificationProgress_yellow"
						android:layout_centerVertical="true" android:progressDrawable="@drawable/progress_bar_yellow"
						style="?android:attr/progressBarStyleHorizontal"
						android:layout_width="fill_parent" android:layout_height="11dip"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp" />
				</LinearLayout>
				<LinearLayout android:id="@+id/red_linear"
					android:layout_width="fill_parent" android:visibility="gone"
					android:layout_height="wrap_content">
					<ProgressBar android:id="@+id/notificationProgress_red"
						android:layout_centerVertical="true" android:progressDrawable="@drawable/progress_bar_red"
						style="?android:attr/progressBarStyleHorizontal"
						android:layout_width="fill_parent" android:layout_height="11dip"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp" />
				</LinearLayout>
			</RelativeLayout>

		</RelativeLayout>


	</LinearLayout>

</LinearLayout>
