<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">


	<ImageView android:src="@drawable/virus_scan_icon06"
		android:layout_margin="5dp" android:layout_width="50dip"
		android:layout_height="50dip" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center_vertical">

		<TextView android:id="@+id/progressDescription"
			android:textStyle="bold" android:textColor="@color/black"
			android:textSize="16sp" android:paddingTop="6dip"
			android:paddingLeft="3dip" android:layout_width="wrap_content"
			android:layout_height="33dip" />

		<LinearLayout android:id="@+id/intercept_linear"
			android:layout_width="fill_parent" android:paddingLeft="5dip"
			android:layout_height="wrap_content">


			<LinearLayout android:id="@+id/phone_lieanr"
				android:paddingRight="30dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/intercep_phone_title_icon" />
				<TextView android:id="@+id/intercet_phone_num_tv"
					android:textSize="16sp" android:layout_width="wrap_content"
					android:textColor="@color/black" android:layout_height="wrap_content" />
			</LinearLayout>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/intercept_sms_title_icon" />
			<TextView android:id="@+id/intercet_sms_num_tv"
				android:textSize="16sp" android:layout_width="wrap_content"
				android:textColor="@color/black" android:layout_height="wrap_content" />


		</LinearLayout>
	</LinearLayout>

</LinearLayout>
