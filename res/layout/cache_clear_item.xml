<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center_vertical" 
	android:focusable="false"
	android:background="@drawable/listselect" 
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/softmanage_app_info_layout"
		android:layout_marginRight="5dp" 
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" 
		android:focusable="false"
		android:gravity="center_vertical" 
		android:layout_toLeftOf="@+id/softmanage_action_layout">
		<ImageView android:id="@+id/softmanage_app_icon"
			android:focusable="false"
			android:padding="3dp" 
			android:layout_margin="3dp" 
			android:layout_height="50dp" 
			android:layout_width="50dp"/>
		<LinearLayout 
			android:layout_width="wrap_content"
			android:orientation="vertical" 
			android:focusable="false"
			android:id="@+id/softmanage_info_layout" 
			android:layout_gravity="center_vertical"
			android:layout_height="wrap_content">
			<LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:id="@+id/softmanage_label_layout"
				android:layout_gravity="center_vertical">
				<TextView 
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:id="@+id/softmanage_app_label"
					android:textColor="#000000" 
					android:layout_gravity="center_vertical"
					android:textSize="15sp" 
					android:focusable="false" 
					android:minLines="1"/>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:id="@+id/softmanage_descrip_layout"
				android:layout_gravity="center_vertical" 
				android:layout_marginTop="5dp"
				android:gravity="bottom">
				<LinearLayout 
					android:layout_height="match_parent"
					android:layout_width="wrap_content" 
					android:gravity="bottom">
					<TextView 
						android:id="@+id/softmanage_app_version"
						android:layout_height="wrap_content" 
						android:layout_width="wrap_content"
						android:layout_marginRight="5dp" 
						android:layout_gravity="center_vertical"
						android:textColor="#000000" 
						android:focusable="false"
						android:maxWidth="50dp"
						android:singleLine="true"
						android:textSize="12sp"/>
				</LinearLayout>


				<LinearLayout 
					android:layout_width="wrap_content"
					android:gravity="bottom" 
					android:layout_height="match_parent">
					<TextView 
						android:id="@+id/softmanage_app_size"
						android:layout_height="wrap_content" 
						android:layout_width="wrap_content"
						android:layout_gravity="center_vertical" 
						android:textColor="#000000"
						android:focusable="false" 
						android:textSize="12sp"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout 
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/softmanage_action_layout">
		
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:src="@drawable/cache_clear_green_icon"
			android:layout_marginRight="15dp" 
			android:id="@+id/audit_network_icon"/>
		
	</LinearLayout>

</RelativeLayout>
