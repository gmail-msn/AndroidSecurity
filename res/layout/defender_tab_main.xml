<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#EEEEEE">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		
		<LinearLayout android:layout_width="fill_parent"
			android:background="#6CBD45" android:layout_height="40dip">
			<TextView android:id="@+id/function_title_tv"
				android:gravity="center" android:textColor="@color/white"
				android:textSize="18dip" android:text="@string/app_name"
				android:layout_width="fill_parent" android:layout_height="fill_parent" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="4dip" android:layout_height="wrap_content"
			android:paddingLeft="13dip">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/firewall_icon" />
			<TextView android:id="@+id/des_title_tv" android:text="@string/safe_your_mobile" android:layout_marginLeft="5dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center_vertical" android:textColor="#313031" />
		</LinearLayout>
		
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="1">
			<FrameLayout android:id="@android:id/tabcontent"
				android:layout_width="fill_parent" android:layout_height="fill_parent" />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="5dip" android:background="#eeeeee" />
		</RelativeLayout>
		<TabWidget android:id="@android:id/tabs" android:visibility="gone"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />

		<LinearLayout  android:id="@+id/bottom" android:background="@color/black"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<LinearLayout android:id="@+id/mobile_sum_linear"
				android:layout_weight="1" android:background="@drawable/linear_focuse" 
				android:layout_width="fill_parent" android:layout_height="50dip"
				android:paddingTop="7dip"
				android:orientation="vertical" android:gravity="center">
				<TextView android:background="@drawable/defin_tab_icon1" android:textColor="#5B983E"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
				<TextView android:id="@+id/mobile_exp_tv" android:text="@string/mobile_sumary"
					 android:layout_width="wrap_content" android:textColor="#5B983E"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/fuc_list_linear"
				android:background="@drawable/linear_unfocuse"  android:gravity="center"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:paddingTop="7dip"
				android:layout_height="50dip" android:orientation="vertical">
				<TextView android:id="@+id/use_fuc_icon_tv"  android:background="@drawable/defin_tab_icon2"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
				<TextView android:id="@+id/use_fuc_tv" android:text="@string/fuc_list" android:textColor="#5B983E"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/soft_center_linear"
				android:background="@drawable/linear_unfocuse"  android:gravity="center"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:paddingTop="3dip"
				android:layout_height="50dip" android:orientation="vertical">
				<TextView  android:background="@drawable/defin_tab_icon3"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
				<TextView android:id="@+id/use_fuc_tv" android:text="@string/soft_center"
				android:textColor="#5B983E"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>

</TabHost>