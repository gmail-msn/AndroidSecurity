<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/listselect">
	<ImageView android:id="@+id/appImageView"
		android:layout_width="60dp" android:layout_height="60dp"
		android:layout_margin="5dp" android:padding="8dp" />
	<LinearLayout android:id="@+id/linear"
		android:orientation="vertical" android:layout_centerVertical="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/appImageView">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/appTextView"
				android:textSize="15sp" android:textColor="#000000"
				android:layout_width="wrap_content"></TextView>
			<TextView android:layout_height="wrap_content"
				android:id="@+id/remote_security_status" android:textSize="12sp"
				android:paddingLeft="10dip" android:singleLine="true"
				android:layout_width="fill_parent"></TextView>
		</LinearLayout>

		<TextView android:layout_height="wrap_content" android:id="@+id/memoryTextView"
			android:textSize="12sp" android:textColor="#000000"
			android:singleLine="true" android:layout_width="fill_parent"></TextView>


		<TextView android:layout_height="wrap_content" android:id="@+id/safe_mobile_status_tv"
			android:textSize="12sp" android:textColor="#000000"
			android:visibility="gone" android:paddingTop="3dip"
			android:singleLine="true" android:layout_width="fill_parent"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/safe_mobile_number_tv"
			android:textSize="12sp" android:textColor="#000000"
			android:visibility="gone" android:paddingTop="3dip"
			android:singleLine="true" android:layout_width="fill_parent"></TextView>
	</LinearLayout>
	<!-- <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:focusable="false" android:id="@+id/procCheck" android:layout_marginRight="5dp" 
		android:layout_alignParentRight="true" android:layout_centerVertical="true"></CheckBox> -->

	<TextView android:id="@+id/procCheck" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:focusable="false"
		 android:layout_marginRight="20dp"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		 />
	<ImageView android:id="@+id/dataImageView" android:src="@drawable/arrow"
		android:layout_marginRight="30dp" android:visibility="invisible"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</RelativeLayout>