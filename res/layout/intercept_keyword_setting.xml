<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#EEEEEE">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:layout_width="fill_parent"
			android:background="#6CBD45" android:layout_height="40dip">
			<TextView android:id="@+id/function_title_tv"
				android:gravity="center" android:textColor="@color/white"
				android:textSize="18dip" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:text="@string/intercept_activity_title" />
		</LinearLayout>
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:padding="10dp"
			android:gravity="center_vertical">
			<EditText android:layout_width="match_parent"
				android:layout_centerVertical="true" android:layout_height="wrap_content" android:background="@drawable/softcenter_input_bg"
				android:paddingLeft="6dp" android:lines="1" android:maxLines="1"
				android:singleLine="true" android:id="@+id/key_word_edit_text" android:layout_toLeftOf="@+id/add_action_linear" android:layout_marginRight="5dp" android:hint="@string/intercept_keyword_hint"></EditText>
			<LinearLayout android:paddingBottom="3dp"
				android:gravity="center" android:layout_width="wrap_content" android:paddingLeft="5dp"
				android:layout_height="wrap_content" android:background="@drawable/search_bg_selector"
				android:paddingTop="3dp" android:paddingRight="5dp" android:id="@+id/add_action_linear" android:layout_alignParentRight="true">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="18dip" android:text="@string/intercept_add_text"></TextView>

			</LinearLayout>
		</RelativeLayout>
		<ListView android:layout_width="fill_parent"
			android:paddingLeft="5dip" android:paddingRight="5dip"
			android:layout_marginTop="8dip" android:layout_height="0dip"
			android:cacheColorHint="#00000000" android:divider="@null"
			android:scrollbars="none" android:layout_weight="1" android:id="@+id/keyword_listview"/>




	</LinearLayout>
</LinearLayout>