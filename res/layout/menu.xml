<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical"
	android:background="@color/white">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<LinearLayout android:id="@+id/account_man_linear"
			android:layout_width="fill_parent" android:clickable="true"
			android:layout_height="50dip" android:orientation="vertical"
			android:gravity="center" android:layout_weight="1"
			android:background="@drawable/button_bg_selector">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/account_manager" />
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/white" android:layout_height="wrap_content"
				android:text="@string/account_manager" android:textSize="12dip" />
		</LinearLayout>
		<View android:layout_width="1dip" android:layout_height="50dip"
			android:background="@color/white" />
		<LinearLayout android:id="@+id/online_update_linear"
			android:background="@drawable/button_bg_selector"
			android:layout_width="fill_parent" android:layout_height="50dip"
			android:orientation="vertical" android:gravity="center"
			android:layout_weight="1" android:clickable="true">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/online_update" />
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/white" android:layout_height="wrap_content"
				android:text="@string/online_update" android:textSize="12dip" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="1dip">
		<LinearLayout android:id="@+id/use_help_linear"
			android:layout_width="fill_parent" android:clickable="true"
			android:layout_height="48dip" android:orientation="vertical"
			android:gravity="center" android:layout_weight="1"
			android:background="@drawable/button_bg_selector">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/help" />
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/white" android:layout_height="wrap_content"
				android:text="@string/use_help" android:textSize="12dip" />
		</LinearLayout>
		<View android:layout_width="1dip" android:layout_height="48dip"
			android:background="@color/white" />
		<LinearLayout android:id="@+id/about_us_linear"
			android:background="@drawable/button_bg_selector"
			android:layout_width="fill_parent" android:layout_height="48dip"
			android:orientation="vertical" android:gravity="center"
			android:layout_weight="1" android:clickable="true">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/about_us" />
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/white" android:layout_height="wrap_content"
				android:text="@string/about_us" android:textSize="12dip" />
		</LinearLayout>
		<View android:layout_width="1dip" android:layout_height="48dip"
			android:background="@color/white" />
		<LinearLayout android:background="@drawable/button_bg_selector"
			android:layout_width="fill_parent" android:layout_height="48dip"
			android:orientation="vertical" android:gravity="center"
			android:layout_weight="1" android:clickable="true" android:id="@+id/feedback_linear">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/feedback_icon"/>
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/white" android:layout_height="wrap_content"
				android:textSize="12dip" android:text="@string/menu_feeback"/>
		</LinearLayout>
	</LinearLayout>





</LinearLayout>
