<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/listselect" android:gravity="center_vertical">
	<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
		<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_height="match_parent" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:gravity="left|center_vertical" android:layout_toLeftOf="@+id/select_cb_linear">
			<TextView android:layout_height="wrap_content" android:id="@+id/list_item_title" android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="16sp" android:layout_marginBottom="8dp"></TextView>
			<TextView android:layout_height="wrap_content" android:id="@+id/list_item_desp" android:layout_width="wrap_content" android:textColor="@color/black" android:lines="1" android:singleLine="true"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:id="@+id/select_cb_linear" android:layout_marginLeft="5dp">
			<CheckBox android:layout_height="wrap_content" android:id="@+id/select_cb" android:layout_width="wrap_content" android:button="@drawable/checkbox_button" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false"></CheckBox>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
