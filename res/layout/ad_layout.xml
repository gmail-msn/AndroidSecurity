	android:layout_marginTop="5dip" android:gravity="center"
	android:layout_gravity="center_horizontal" android:id="@+id/ad_header_linear"
	android:layout_centerInParent="true" android:background="@color/white"
	android:layout_width="match_parent" android:orientation="vertical">

	<ImageView android:id="@+id/recommend_soft_image"
