<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_horizontal|center"
	android:gravity="center_horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:paddingTop="0dip">

	<LinearLayout android:background="@color/white"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:paddingBottom="15dip" android:layout_width="300dip">


		<LinearLayout android:id="@+id/linearLayout1"
			android:background="#6CBD45" android:gravity="center"
			android:layout_height="45dp" android:layout_width="fill_parent">
			<ImageView android:id="@+id/imageView1"
				android:layout_marginRight="5dp" android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" android:src="@drawable/soft_prompt_dialog_icon"
				android:layout_height="wrap_content" android:layout_marginTop="2dp"></ImageView>
			<TextView android:id="@+id/title_text_tv" android:textColor="@color/white"
				android:text="@string/softmanage_prompt_dialog_title"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:gravity="center_horizontal" android:layout_weight="1"
			android:layout_width="match_parent" android:layout_height="wrap_content">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<EditText android:id="@+id/et_old_pass" android:password="true"
						android:layout_marginTop="8dip" android:layout_width="fill_parent"
						android:layout_height="40dip" android:singleLine="true"
						android:textSize="14dip" android:paddingLeft="6dip"
						android:paddingTop="3dip" android:paddingBottom="3dip"
						android:paddingRight="3dip" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="@string/account_manage_input_old_pass"/>
				</LinearLayout>
				

			</RelativeLayout>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/et_linear1" android:layout_height="wrap_content">

					<EditText android:id="@+id/et_line1" android:password="true"
						android:layout_width="fill_parent"
						android:layout_height="40dip" android:singleLine="true"
						android:textSize="14dip" android:paddingLeft="6dip"
						android:paddingTop="3dip" android:paddingBottom="3dip"
						android:paddingRight="3dip" android:hint="@string/account_man_change_pass_hint_text"
						android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
				</LinearLayout>
				

			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<EditText android:id="@+id/et_line2" android:layout_width="fill_parent"
					android:layout_height="40dip" android:singleLine="true"
					android:textSize="14dip" android:paddingLeft="6dip"
					android:paddingTop="3dip" android:paddingBottom="3dip"
					android:paddingRight="3dip" android:password="true"
					android:hint="@string/account_man_change_pass_hint2_text"
					android:layout_marginRight="5dp" android:layout_marginLeft="5dp" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:gravity="left" android:layout_height="wrap_content"
				android:paddingLeft="20dip">

				<CheckBox android:id="@+id/procCheck" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:focusable="false"
					android:padding="5dip" android:textColor="@color/black"
					android:text="@string/showpasswd" android:background="@null"
					android:button="@drawable/checkbox_button" />
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="3dip"
				android:paddingRight="3dip">

				<View android:layout_width="match_parent" android:background="@drawable/virus_scan_line01"
					android:layout_height="1dp"></View>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="8dip" android:gravity="center_horizontal"
				android:layout_gravity="center_horizontal" android:layout_width="match_parent">
				<Button android:text="@android:string/ok" android:id="@+id/button_ok"
					android:padding="5dp" android:textColor="@color/white"
					android:layout_marginBottom="2dp" android:background="@drawable/button_bg_selector"
					android:layout_height="wrap_content" android:layout_width="100dip"></Button>
				<Button android:text="@android:string/cancel" android:id="@+id/button_cancel"
					android:padding="5dp" android:layout_marginLeft="10dp"
					android:textColor="@color/white" android:layout_marginBottom="2dp"
					android:background="@drawable/button_bg_selector"
					android:layout_width="100dip" android:layout_height="wrap_content"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
