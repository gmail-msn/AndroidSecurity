<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/listselect">
	<ImageView android:id="@+id/appImageView"
		android:layout_width="60dp" android:layout_height="60dp"
		android:layout_centerVertical="true" android:padding="5dp" android:layout_margin="3dp"/>
	<LinearLayout android:id="@+id/linear"
		android:orientation="vertical" android:layout_centerVertical="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/appImageView" android:layout_toLeftOf="@+id/proc_action_linear">
		<TextView android:layout_height="wrap_content" android:id="@+id/appTextView"
			android:textSize="15sp" android:textColor="#000000"
			android:layout_width="fill_parent" android:layout_marginBottom="5dp"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/memoryTextView"
			android:textSize="12sp" android:textColor="#000000"
			android:singleLine="true" android:layout_width="fill_parent"></TextView>
	</LinearLayout>

	<LinearLayout android:layout_alignParentRight="true"
		android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/proc_action_linear">
		<CheckBox android:id="@+id/procCheck" android:layout_width="40dip"
			android:layout_height="40dip" android:focusable="false"
			android:padding="5dip" android:layout_marginRight="5dp"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:textColor="@color/black" android:text="      "
			android:background="@null" android:button="@drawable/checkbox_button"
			android:layout_marginLeft="5dp" />
		<ImageView android:id="@+id/dataImageView" android:src="@drawable/arrow"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:visibility="gone" android:layout_marginRight="10dp" />

	</LinearLayout>


</RelativeLayout>